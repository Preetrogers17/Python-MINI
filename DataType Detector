import ast
import tkinter as tk
from tkinter import messagebox

def detect_type():
    try:
        data = entry.get()
        result = ast.literal_eval(data)
        datatype = type(result).__name__
        messagebox.showinfo("Result", f"The data type is: {datatype}")
    except Exception as e:
        messagebox.showerror("Error", f"Invalid input!\n\n{str(e)}")

# GUI Setup
root = tk.Tk()
root.title("ðŸ§  DataType Detector Buddy")
root.geometry("400x200")
root.config(bg="#f0f0f0")

title = tk.Label(root, text="ðŸ¤– Enter Any Data Below:", font=("Arial", 14), bg="#f0f0f0")
title.pack(pady=10)

entry = tk.Entry(root, font=("Arial", 12), width=30)
entry.pack(pady=5)

button = tk.Button(root, text="Detect DataType", font=("Arial", 12), command=detect_type)
button.pack(pady=10)

root.mainloop()
